{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "database-rebuild",
            "detail": "Runs flyway clean and flyway migrate",
            "type": "shell",
            "command": "cd src/usbipice/control/flyway && flyway clean && flyway migrate",
            "problemMatcher": []
        },
        {
            "label": "database-clear",
            "detail": "Removes workers from database",
            "type": "shell",
            "command": [
                "psql",
                "-d",
                "\"$USBIPICE_DATABASE\"",
                "-c",
                "\"delete from worker;\""
            ],
            "problemMatcher": []
        },
        {
            "label": "build-firmware",
            "detail": "Builds firmware in worker/firmware",
            "type": "shell",
            "command": "cd src/usbipice/worker/firmware && bash build.sh",
            "problemMatcher": []
        },
        {
            "label": "docker-build-all",
            "detail": "Builds all image",
            "dependsOn": "build-firmware",
            "type": "docker-build",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/deploy/Dockerfile",
                "tag": "usbipiceproject/usbipice-worker:all",
                "context": "${workspaceFolder}"
            }
        },
        {
            "label": "compose-up",
            "detail": "Starts local development stack",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "detached": true
                },
                "files": [
                    "${workspaceFolder}/deploy/compose.yml"
                ]
            }
        },
        {
            "label": "compose-down",
            "detail": "Stops local development stack",
            "type": "docker-compose",
            "dockerCompose": {
                "down": {},
                "files": [
                    "${workspaceFolder}/deploy/compose.yml"
                ]
            }
        },
        {
            "label": "compose-restart",
            "detail": "Restarts compose and clears database",
            "dependsOn": [
                "compose-down",
                "database-clear",
                "compose-up"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "compose-rebuild",
            "detail": "Rebuilds image, clears database, restarts compose",
            "dependsOn": [
                "docker-build-all",
                "compose-restart"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
